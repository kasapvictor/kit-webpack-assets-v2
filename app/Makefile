.PHONY: help

help: ### Ignore - Show current help message
	@echo "Available ğŸš€App commands:"
	@grep -E '^[a-zA-Z_-]+:.*?ğŸš€.*$$' ./Makefile | awk '!/## Ignore/' | \
	awk 'BEGIN {FS = ":.*?## "}; {printf "make \033[32m%-30s\033[0m %s\n", $$1, $$2}'
	@echo ""

install-npm: ## ğŸš€App - Installs NPM Required NPM Packages for the App
	npm install

install-yarn: ## ğŸš€App - Installs YARN Required NPM Packages for the App
	yarn install

start: ## ğŸš€App - Starts the App Server in Development Mode
	HOST=$(HOST) PORT=$(PORT_1) NODE_ENV=development npx webpack serve

build-dev: ## ğŸš€App - Builds the App in Development Mode (Uncompressed Files)
	NODE_ENV=development npx webpack --mode development

build-prod: pretty lint ## ğŸš€App - Builds the App in Production Mode (Compressed Files)
	NODE_ENV=production npx webpack --mode production

browser: ## ğŸš€App - Starts the App with Browser-Sync for Live Testing
	npx browser-sync --watch --no-notify --host $(HOST) --port $(PORT_2) dist

pretty: ## ğŸš€App - Make pretty files
	npx prettier --write "src/**/*.{css,scss,js,ts}"

lint: ## ğŸš€App - Check & Fix code
	npx eslint --fix src

pre-commit: pretty lint ## ğŸš€App - Check Pre commit code
