{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "root/*": [
        "./src/*"
      ],
      "app": [
        "./src/app"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "widgets/*": [
        "./src/widgets/*"
      ],
      "features/*": [
        "./src/features/*"
      ],
      "shared/*": [
        "./src/shared/*"
      ],
      "entities/*": [
        "./src/entities/*"
      ]
    },

    "module": "es6",
    "target": "es6",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Bundler mode */
    "pretty": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Linting */
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },

  "noImplicitReturns": true,
  "strictNullChecks": true,

  "include": ["src/**/*"],
  "exclude": ["node_modules", "public/**/*"]
}
